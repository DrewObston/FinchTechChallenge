import React, { useState } from 'react';

const Dropdown = () => {
  const [isOpen, setIsOpen] = useState(false);
  const [selectedOption, setSelectedOption] = useState(null);

  // Sample options for the dropdown
  const options = [ADP Run - `adp_run`
Bamboo HR - `bamboo_hr`
Bamboo HR (API) - `bamboo_hr_api`
HiBob - `bob`
Gusto - `gusto`
Humaans - `humaans`
Insperity - `insperity`
Justworks - `justworks`
Namely - `namely`
Paychex Flex - `paychex_flex`
Paychex Flex (API) - `paychex_flex_api`
Paycom - `paycom`
Paycom (API) - `paycom_api`
Paylocity - `paylocity`
Paylocity (API) - `paylocity_api`
Personio - `personio`
Quickbooks - `quickbooks`
Rippling - `rippling`
Sage HR - `sage_hr`
Sapling - `sapling`
Squoia One - `sequoia_one`
Square Payroll - `square_payroll`
Trinet - `trinet`
Trinet (API) - `trinet_api`
Ulti Pro - `ulti_pro`
Wave - `wave`
Workday - `workday`
Zenefits - `zenefits`
Zenefits (API) - `zenefits_api`];

  const toggleDropdown = () => {
    setIsOpen(!isOpen);
  };

  const handleOptionClick = (option) => {
    setSelectedOption(option);
    setIsOpen(false); // Close dropdown after selecting
  };

  return (
    <div style={styles.dropdown}>
      <button onClick={toggleDropdown} style={styles.button}>
        {selectedOption || 'Select an option'}
      </button>

      {isOpen && (
        <><div style={styles.menu}>
          {options.map((option) => (
            <div
              key={option}
              onClick={() => handleOptionClick(option)}
              style={styles.menuItem}
            >
              {option}
            </div>
          ))}
        </div><p>Value of options is {selectedOption}</p></>
      )}
    </div>
  );
};

// Styles for dropdown elements
const styles = {
  dropdown: {
    position: 'relative',
    display: 'inline-block',
  },
  button: {
    padding: '10px 20px',
    fontSize: '16px',
    cursor: 'pointer',
    borderRadius: '4px',
    border: '1px solid #ccc',
    backgroundColor: '#f5f5f5',
  },
  menu: {
    position: 'absolute',
    top: '100%',
    left: 0,
    zIndex: 1,
    border: '1px solid #ccc',
    backgroundColor: 'white',
    borderRadius: '4px',
    width: '100%',
    boxShadow: '0 8px 16px rgba(0, 0, 0, 0.1)',
  },
  menuItem: {
    padding: '10px',
    cursor: 'pointer',
  },
};
